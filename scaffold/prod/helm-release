apiVersion: helm.fluxcd.io/v1
kind: HelmRelease
metadata:
  name: "${COUNTRY}-prod"
  namespace: "${COUNTRY}-prod"
spec:
  releaseName: "${COUNTRY}-prod"
  forceUpgrade: true
  rollback:
    enable: true
    disableHooks: true
  chart:
    git: git@github.com:michaelperel/config
    path: charts/helloworld
    ref: "${COUNTRY}-prod"
  values:
    COUNTRY: "${COUNTRY}"
    RUN_JOB: False
